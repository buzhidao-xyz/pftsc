<UserControl x:Class="PFTSScene.PFTS3DSceneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PFTSScene"
             mc:Ignorable="d" 
             d:DesignHeight="886" d:DesignWidth="1660">
    <UserControl.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterY="0.5" CenterX="0.5"/>
                    <RotateTransform Angle="155.433" CenterY="0.5" CenterX="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FFF1F2F3" Offset="0"/>
            <GradientStop Color="#FF5F92CF" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        <Viewport3D>
            
        </Viewport3D>

    </Grid>
</UserControl>
